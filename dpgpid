set -eu

USAGE='[--help] [--version] show'
VERSION='0.0.1'

dpgpid() {
  while test $# != 0; do
    case "$1" in
    -h|--help)
      help
      ;;
    -v|--version)
      version
      ;;
    --)
      shift
      break
      ;;
    -*)
      usage
      ;;
    show)
      show
      ;;
    *)
      break
      ;;
    esac
    shift
  done
}

help() {
  usage
}

show() {
  gpg --list-keys --with-colons |awk -F: '$1 == "pub" {print "did:pgp:"$5}'
}

usage() {
  printf "%s\n" "Usage: $(basename "$0") ${USAGE}"
}

version() {
  printf "%s\n" "Version: $(basename "$0") v${VERSION}"
}

dpgpid "$@"
